    center / cover no-repeat;
  opacity: 0.05;
  z-index: 0;
}

.cta-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 3rem;
  position: relative;
  z-index: 1;
}

.cta-content {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.cta-content h2 {
