}

.cta-content p {
  font-size: 1.1rem;
  margin-bottom: 2rem;
  color: var(--text-light);
}

.cta-features {
  margin-bottom: 2rem;
}

.cta-features li {
  display: flex;
  align-items: center;
  gap: 1rem;
  margin-bottom: 1rem;
}

.cta-features li .icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 30px;
