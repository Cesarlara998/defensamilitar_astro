  right: -30px;
  width: 120px;
  height: 120px;
  background-color: var(--secondary-color);
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: white;
  box-shadow: var(--box-shadow);
  z-index: 3;
}

.experience-badge .years {
  font-size: 2rem;
  font-weight: 800;
  line-height: 1;
}

.experience-badge .text {
  font-size: 0.8rem;
  text-align: center;
