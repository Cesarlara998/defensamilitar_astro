  box-shadow: var(--box-shadow);
}

.about-image-overlay {
  width: 60%;
  height: 60%;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 1;
}

.about-image-overlay img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: var(--border-radius);
  box-shadow: var(--box-shadow);
}

.experience-badge {
  position: absolute;
